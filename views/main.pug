extends layout

block content
    h1= title
    p Welcome to #{title}

    div
        h2 SIP:
        div
            ul
                li Number: #{callNumber}
                li URI: #{sipUri}
                li WS: #{sipWsUri}
                li stun: #{stunUri}
        h2 Media:
    form()
        div
            h3 Stream URI:
            input.text_uri(type="text", name="uri", required="true", placeholder="URI", value="https://cameras.inetcom.ru/hls/camera12_2.m3u8")
            br
            br
            button.btn_start(type="button") Start media streaming
            button.btn_stop(type="button") Stop media streaming
    br
    br
    textarea.text_log(name="log", cols=80, rows=40)
    script(src='/javascripts/main.js')